<header class="bg-indigo-200">
      <h1 class="px-4 mt-4 mb-4 text-4xl font-black text-center rainbow-active"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <div id="nav" class="flex text-center">
      <ul class="float-left list-none p">
        {%- for nav in collections.nav -%}
        <li class="inline-flex {% if nav.url == page.url %} font-bold underline{% endif %}"><a href="{{ nav.url | url }}" class="rainbow-active">{{ nav.data.navtitle }}</a></li>
        {%- endfor -%}
      </ul>
      </div>
    </header>