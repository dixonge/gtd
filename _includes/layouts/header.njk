<header class="bg-blue-300">
      <h1 class="px-4 text-center mt-4 mb-4 text-4xl font-bold"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <div id="nav" class="flex text-center">
      <ul class="p list-none ml-4 float-left">
        {%- for nav in collections.nav -%}
        <li class="inline-flex mr-4{% if nav.url == page.url %} font-bold underline{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
        {%- endfor -%}
      </ul>
      </div>
    </header>