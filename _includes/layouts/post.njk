---
layout: layouts/base-science.njk
title: Posts - Glenn 2.0
templateClass: tmpl-post
headerClass: elv-header-docs
layoutClass: elv-layout-toc
isDocs: true
---
<div class="elv-toc float-left mr-8">

<details open>
	<summary class="cursor-pointer border-2 border-solid text-base text-center uppercase no-underline bg-white font-sans">Menu</summary>
	{%- if eleventyNavigation -%}
		{%- set navKey = eleventyNavigation.key -%}
	{%- endif -%}
	{{ collections.sidebarNav | eleventyNavigation("Posts") | eleventyNavigationToHtml({ activeKey: navKey, listClass: 'elv-toc-list', activeListItemClass: 'elv-toc-active' }) | safe }}
</details>

</div>

{{ content | safe }}

{% if relatedLinks or (relatedKey and collections[ "related-" + relatedKey ].length) %}
<hr>
<h3>Related Docs</h3>
<ul>
{% for related in collections[ "related-" + relatedKey ] %}
	<li><a href="{{ related.url }}">{{ related.data.relatedTitle }}</a></li>
{%- endfor %}
{% for url,title in relatedLinks %}
	<li><a href="{{ url }}">{{ title }}</a></li>
{% endfor %}
</ul>
{% endif %}
