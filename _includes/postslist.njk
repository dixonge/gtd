<ol reversed class="postlist" style="counter-reset: start-from {{ postslist.length + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {% for tag in post.data.tags %}
      {%- if tag != "posts" -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    <p>
    {{ post.templateContent | striptags(true) | truncate(280) }}<a href="{{ post.url | url }}">READ MORE</a>
    </p>
    <br>
    {% if post.data.image %}
    <img src="{{ post.data.image }}">
    {% elif post.data.isbn13 %}
    <a class="book-image-link u-url" href="{{ post.url | url }}">
      <img class="book-image" src="https://covers.openlibrary.org/b/isbn/{{ post.data.isbn13 }}.jpg"></img></a>
    {% elif post.data.isbn %}
    <a class="book-image-link u-url" href="{{ post.url | url }}">
      <img class="book-image" src="https://covers.openlibrary.org/b/isbn/{{ post.data.isbn }}.jpg"></img></a>
    {% endif %}
  </li>
{% endfor %}
</ol>
